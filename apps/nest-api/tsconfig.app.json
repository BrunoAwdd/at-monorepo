{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/", // e importante que a linha esteja assim, ou vai exportar para o lugar errado
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2021"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
